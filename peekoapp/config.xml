<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.peeko.app"
        version   = "1.0.0">
	<name>
        Peeko
    </name>
    <description>
        Quick and easy window shopping. Find cool stuff to browse and buy around you with a single tap.
    </description>
    <author href='http://google.com/' email='shahruksemail@gmail.com'>
        Shahruk Khan
    </author>
	<icon src='icon.png' />
	<gap:splash src='splash.png' />
	<gap:platform name='ios' />
    <access origin='*'/>
    <!-- <content src='http://mysite.com/myapp.html' /> for external pages -->
    <content src='index.html'/>
    <!-- Preferences for iOS -->
    <preference value='false' name='AllowInlineMediaPlayback'/>
    <preference value='true' name='AutoHideSplashScreen'/>
    <preference value='cloud' name='BackupWebStorage'/>
    <preference value='false' name='EnableLocation'/>
    <plugins>
    </plugins>
    <preference value='false' name='disable-cursor'/>
    <preference value='none' name='permissions'/>
    <preference value='true' name='exit-on-suspend'/>
    <preference value='7' name='android-minSdkVersion'/>
    <preference value='black-opaque' name='ios-statusbarstyle'/>
    <preference value='auto' name='android-installLocation'/>
    <preference value='true' name='auto-hide-splash-screen'/>
    <preference value='true' name='detect-data-types'/>
    <preference value='universal' name='target-device'/>
    <preference value='default' name='orientation'/>
    <preference value='true' name='fullscreen'/>
    <preference value='false' name='UIWebViewBounce'/>
    <preference value='true' name='DisallowOverscroll'/>
    <preference value='false' name='ShowSplashScreenSpinner'/>
    <preference value='false' name='stay-in-webview'/>
    <preference value='true' name='prerendered-icon'/>
	
	<feature name="Geolocation">
		<param name="ios-package" value="CDVLocation" />
	</feature>
	
	<feature name="InAppBrowser">
		<param name="ios-package" value="CDVInAppBrowser" />
	</feature>
	
	<feature name="SocialSharing">
		<param name="ios-package" value="SocialSharing" />
	</feature>

</widget>